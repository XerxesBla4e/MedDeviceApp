<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mnameh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:hint="MachineName"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/mserialh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mnameh"
            android:background="@drawable/layout_bg"
            android:hint="Machine Serial"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mnumberh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mserialh"
            android:background="@drawable/layout_bg"
            android:hint="Machine Model Number"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mdepartmenth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mnumberh"
            android:background="@drawable/layout_bg"
            android:hint="Department"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mstateh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mdepartmenth"
            android:background="@drawable/layout_bg"
            android:hint="Machine State"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mlastserviceh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mstateh"
            android:background="@drawable/layout_bg"
            android:hint="Last Service"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/rcommenth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mlastserviceh"
            android:background="@drawable/layout_bg"
            android:hint="Comment"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mmanfh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcommenth"
            android:background="@drawable/layout_bg"
            android:hint="Manufacturer"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/incharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mmanfh"
            android:background="@drawable/layout_bg"
            android:hint="Incarge Name"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/healthfclty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/incharge"
            android:background="@drawable/layout_bg"
            android:hint="Health Facility"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hflevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/healthfclty"
            android:background="@drawable/layout_bg"
            android:hint="Health Facility Level"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/entrydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hflevel"
            android:background="@drawable/layout_bg"
            android:hint="Machine Entry Date"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/entrydate"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnedit"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="#4CAF50"></Button>

            <Button
                android:id="@+id/btndelete"
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="#4CAF50"></Button>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>