<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:hint="MACHINE ID(UPDATE/DELETE)"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></EditText>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/id"
            android:background="@drawable/layout_bg"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/serial"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:hint="SERIAL NUMBER"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/serial"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:hint="MODEL NUMBER"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/manufacturer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/model"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:hint="MANUFACTURER"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/manufacturer"
            android:background="@drawable/layout_bg"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner2"
            android:background="@drawable/layout_bg"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/lastservice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner3"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:hint="LAST SERVICE DATE"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/lastservice"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:hint="COMMENT"
            android:textColor="@color/black"
            android:textSize="20dp"></EditText>


        <Button
            android:id="@+id/add"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment"
            android:layout_marginTop="12dp"
            android:text="Add"
            android:textSize="25sp"
            app:backgroundTint="#F44336" />

        <Button
            android:id="@+id/read"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="Read"
            android:textSize="25sp"
            app:backgroundTint="#F44336" />

        <Button
            android:id="@+id/delete"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add"
            android:layout_marginTop="8dp"
            android:text="Delete"
            android:textSize="25sp"
            app:backgroundTint="#F44336" />

        <Button
            android:id="@+id/update"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/read"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="Update"
            android:textSize="25sp"
            app:backgroundTint="#F44336" />

    </RelativeLayout>


</ScrollView>