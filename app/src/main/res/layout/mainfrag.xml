<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btncreate"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:text="MACHINES"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnview"
            android:layout_width="326dp"
            android:layout_height="87dp"
            android:layout_below="@+id/btncreate"
            android:layout_alignStart="@+id/btncreate"
            android:layout_alignLeft="@+id/btncreate"
            android:layout_alignEnd="@+id/btncreate"
            android:layout_alignRight="@+id/btncreate"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="299dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="VIEW MACHINES"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnadduser"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_below="@+id/btnview"
            android:layout_alignStart="@+id/btnview"
            android:layout_alignLeft="@+id/btnview"
            android:layout_alignEnd="@+id/btnview"
            android:layout_alignRight="@+id/btnview"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="476dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#4CAF50"
            android:text="UPLOAD DEVICES"
            android:textSize="25sp"
            app:backgroundTint="#4CAF50" />
    </RelativeLayout>

</ScrollView>

